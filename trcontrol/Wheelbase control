/* Private typedef -----------------------------------------------------------*/
/* USER CODE BEGIN PTD */
extern motor_status motor1_stat;
extern motor_status motor2_stat;
extern motor_status motor3_stat;
extern motor_status motor4_stat;
/* USER CODE END PTD */

