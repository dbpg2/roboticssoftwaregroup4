void SystemClock_Config(void);
/* USER CODE BEGIN PFP */

double PID(uint16_t setpoint, double* output, double* prev_error, double* prev_time, double* current_position){
	
	//setpoint target position
	
	double current_error = 0;
	double current_time = HAL_GetTick();
	double kp = 0; ki = 0; kd = 0;
	double derivative = 0;
	
	current_error =  setpoint - current_position;  //current_position ->> measure value ( how to measure)
	
	derivative = (current_error - prev_error)/(current_time - prev_time);
	
	output = kp*error + ki*(current_error*(current_time - prev_time)+prev_error*(current_time - prev_time)) + kd*derivative;
	
	prev_time = current_time;
	prev_error = current_time;
	current_position = output*(current_time - prev_time);
	
}

